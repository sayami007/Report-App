<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/pickDateEvent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/chooseDate"/>


    <Button
        android:id="@+id/pickStartDateEvent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Choose date" />


    <Button
        android:id="@+id/pickEndDateEvent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Choose date" />

    <EditText
        android:id="@+id/maleEvent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/male" />


    <EditText
        android:id="@+id/femaleEvent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/female" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/la"></LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addMember"
        android:id="@+id/inc"/>


    <Button
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonColor"
        android:text="@string/save"
        android:id="@+id/saveing"/>


</LinearLayout>