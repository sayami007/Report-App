<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/phase1Question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:contentDescription="@string/behaviour"
            android:src="@drawable/phase1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/p1"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phase2Question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:contentDescription="@string/behaviour"
            android:src="@drawable/phase2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/p2"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phase3Question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:contentDescription="@string/p3"
            android:src="@drawable/phase3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/p3"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phase4Question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:contentDescription="@string/behaviour"
            android:src="@drawable/phase4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/p4"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>