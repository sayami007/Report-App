<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_background"
    android:orientation="vertical">


    <Button
        android:id="@+id/pickDateEvent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/button"
        android:text="@string/chooseDate" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meeting chaired by" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="male" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="female" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Representative" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Village Coordiantio Comiite" />


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher /School" />


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Socail Mobilizer" />


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Junior Technical Assistance" />


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Others" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agenda" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decision" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save " />


</LinearLayout>